// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
    "minimap": {
        "show": "always",
    },
    "disable_ai": true,
    "telemetry": {
        "metrics": false,
        "diagnostics": false
    },
    "base_keymap": "JetBrains",
    "icon_theme": "Zed (Default)",
    "ui_font_size": 16,
    "buffer_font_size": 16,
    "theme": {
        "mode": "dark",
        "light": "One Dark",
        "dark": "VSCode Dark Modern"
    },
    "collaboration_panel": {
        "button": false
    },
    "notification_panel": {
        "button": false
    },
    "agent": {
        "enabled": false,
        "button": false
    },
    "preview_tabs": {
        "enabled": false
    },
    "restore_on_startup": "none",
    "soft_wrap": "editor_width",
    "git": {
        "inline_blame": {
            "enabled": false
        }
    },
    "auto_update": false,
    "tab_bar": {
        "show": true,
        "show_nav_history_buttons": false,
        "show_tab_bar_buttons": true
    },
    "toolbar": {
        "breadcrumbs": false,
        "quick_actions": false
    },
    "project_panel": {
        "dock": "left",
        "default_width": 240,
        "indent_size": 24
    },
    "languages": {
        "JSONC": {
            "formatter": "language_server",
            "format_on_save": "on",
            "tab_size": 4,
            "soft_wrap": "preferred_line_length"
        },
        "XML": {
            "format_on_save": "on",
            "tab_size": 4,
            "soft_wrap": "none"
        }
    }
}
